{
  "printWidth": 80,
  "tabWidth": 4,
  "useTabs": true,
  "semi": false,
  "singleQuote": true,
  "trailingComma": "none",
  "bracketSpacing": true,
  "arrowParens": "avoid",
  "overrides": [
    {
      "files": ["**.json", "**.yml"],
      "options": {
        "tabWidth": 2,
        "useTabs": false,
        "singleQuote": true
      }
    }
  ]
}
